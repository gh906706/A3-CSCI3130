{
  "rules": {
    ".read": "true",
    ".write": "true",
    "business": {
            "$business": {
                "name": {
                    ".validate": "newData.isString() && newData.val().length >= 2 && newData.val().length <= 48"
                },
                "businessNum": {
                    ".validate": "newData.isString() && newData.val().length == 9"
                },
                "primeBusiness": {
                  ".validate": "newData.isString() && root.child('valid_primeBusiness/' + newData.val()).exists() && ((newData.val().matches(/^Fisher/))|| (newData.val().matches(/^Distributor/)) || (newData.val().matches(/^Processor/))|| (newData.val().matches(/^Fish Monger/))) && newData.val() != null"
                },
                "address": {
                  ".validate": "newData.isString() && newData.val() < 50"
                },
                "province": {
                  ".validate": "newData.isString() && root.child('valid_province/' + newData.val()).exists() &&((newData.val().matches(/^AB/)) || (newData.val().matches(/^BC/)) || (newData.val().matches(/^MB/))|| (newData.val().matches(/^NB/)) || (newData.val().matches(/^NL/))|| (newData.val().matches(/^NS/)) || (newData.val().matches(/^NT/))|| (newData.val().matches(/^NU/)) || (newData.val().matches(/^ON/))|| (newData.val().matches(/^PE/)) || (newData.val().matches(/^QC/))|| (newData.val().matches(/^SK/)) || (newData.val().matches(/^UT/))|| (newData.val().matches(/^/)))"
                }
            }
    }
  }
}